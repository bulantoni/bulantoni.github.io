{
    "plugins": [
        "theme-default",
        "ace",
        "bootstrap-callout",
        "bootstrap-callout2",
        "custom-favicon",
        "editlink",
        "search-languages",
        "theme-packt",
        "terminus",
        "book-summary-scroll-position-saver",
        "code-demo",
        "codeblock",
        "code-highlighter",
        "code-editor"
    ],
    "pluginsConfig": {
        "build": {
            "bin": "pandoc",
            "args": "",
            "opts": "[object Object]",
            "template": "_layouts/main.md",
            "output": "_book/main.md",
            "format": "markdown"
        },
        "fontsettings": {
            "theme": "night",
            "family": "sans",
            "size": 2
        },
        "sharing": {
            "facebook": true,
            "twitter": true,
            "google": true,
            "weibo": false,
            "instapaper": true,
            "vk": true,
            "all": "facebook,google,twitter,weibo,instapaper,vk"
        }
    }
}